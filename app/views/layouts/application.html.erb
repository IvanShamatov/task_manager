<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      Hello, <%= current_user.email%>! You can <%= link_to 'logout', logout_path, method: 'delete' %>
    <% else %>
      <%= link_to 'Login', login_path %> or <%= link_to 'register', new_user_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
